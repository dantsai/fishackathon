<%= form_for(@report) do |f| %>
  <% if @report.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@report.errors.count, "error") %> prohibited this report from being saved:</h2>

      <ul>
      <% @report.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <p class="left2 formdescription"><%= f.label :photo_url, 'Photo' %></p>
    <%= f.file_field :photo_url %>
  </div>

  <div class="field">
    <p class="left2 formdescription"><%= f.label :location_desc, 'Location Description' %></p>
    <%= f.text_area :location_desc, :placeholder=>'Where is the boat?', :style=>"margin-bottom:5px" %><br>
    <button id="lookuploc" type="button">Locate Me</button>
    <p id="latlong">(0,0)</p>

    <input type="hidden" name="report[location_lat]" id="lat" value="" />
    <input type="hidden" name="report[location_lng]" id="lng" value="" />
    <br>
    <br>
  </div>

  <div class="field">
    <p class="left2 formdescription"><%= f.label :comments %></p>
    <%= f.text_area :comments, :placeholder=>'Additional notes' %>
  </div>
  <div class="actions">
    <%= f.submit 'Submit Report' %>
  </div>
<% end %>
