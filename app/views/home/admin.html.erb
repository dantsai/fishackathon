<h1>Pending Registrations</h1> <%= link_to 'View All', registrations_path %>

<table class="datatable">
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone number</th>
      <th>Location</th>
      <th>Boat type</th>
      <th>Photo</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @registrations.each do |registration| %>
      <tr>
        <td><%= registration.name %></td>
        <td><%= registration.phone_number %></td>
        <td><%= registration.location_desc_string %></td> 
        <td><%= registration.boat_type %></td>
        <td><%= registration.photo_url %></td>
        <td><%= link_to 'View', registration %></td>
        <td><%= link_to 'Edit', edit_registration_path(registration) %></td>
        <td><%= link_to 'Destroy', registration, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


